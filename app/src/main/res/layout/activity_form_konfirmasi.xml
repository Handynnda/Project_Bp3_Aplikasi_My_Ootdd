<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- CardView untuk informasi pembeli -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/textNamaPembeli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Pembeli"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textAlamatPembeli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat Pembeli"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView untuk informasi pembayaran -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/textTotalPembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Pembayaran"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textMetodePembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metode Pembayaran"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <!-- Tambahkan untuk info nomor rekening/e-wallet -->
                <TextView
                    android:id="@+id/textInfoPembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Pembayaran"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Label Upload Bukti Pembayaran -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Bukti Pembayaran:"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Tombol Pilih Bukti Pembayaran -->
        <Button
            android:id="@+id/buttonUploadBukti"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Pilih Bukti Pembayaran"
            android:background="@color/DefaultColor"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="1dp"
            android:layout_marginBottom="5dp" />

        <!-- Tombol Konfirmasi Pembayaran -->
        <Button
            android:id="@+id/buttonKonfirmasiPembayaran"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Konfirmasi Pembayaran"
            android:background="@color/DefaultColor"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="5dp" />
    </LinearLayout>
</ScrollView>
